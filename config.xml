<?xml version='1.0' encoding='utf-8'?>
<widget id="de.corrently.app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Corrently</name>
    <description>
    </description>
    <author email="info@helmundwalter.de" href="http://helmundwalter.de">
        Helm &amp; Walter IT-Solutions GbR
    </author>
    <content src="splashscreen.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <icon density="mdpi" height="57" platform="android" src="www/imgs/logo.png" width="57" />
</widget>
